<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/list_item_crime_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Took my lunch from the extra fridge"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/list_item_crime_date_text_view"
        android:layout_width="113dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/list_item_crime_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_crime_title_text_view"
        tools:text="August 29, 1982"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/crime_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_solved"
        android:layout_marginRight="4dp"
        tools:ignore="ContentDescription" />


</android.support.constraint.ConstraintLayout>